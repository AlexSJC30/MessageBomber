<Window x:Class="MessageBomber.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessageBomber"
        mc:Ignorable="d"
        Title="信息轰炸器" Height="400" Width="700" Closing="Window_Closing">
    <Window.Background>
        <ImageBrush Stretch="UniformToFill" ImageSource="/Resources/Background.png"/>
    </Window.Background>
    <Grid>
        <Border Background="#7FFFFFFF"/>
        <ScrollViewer Margin="0,0,0,20">
            <Grid>
                <Grid>
                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Text="窗口标题：" FontSize="15" Height="21" Width="70"/>
                    <TextBox x:Name="windowTitle" HorizontalAlignment="Left" VerticalAlignment="Top" Width="315" Margin="80,10,0,0" FontSize="15" Height="21"/>
                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,35,0,0" Text="时间间隔：" FontSize="15" Height="21" Width="70"/>
                    <TextBox x:Name="timeInterval" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Text="1000" Margin="80,35,0,0" FontSize="15" Height="21"/>
                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="205,35,0,0" Text="执行次数：" FontSize="15" Height="21" Width="70"/>
                    <TextBox x:Name="executeCount" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Text="10" Margin="275,35,0,0" FontSize="15" Height="21"/>
                    <Button x:Name="button" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="405,19,0,0" Content="开始" Width="50" Height="30" FontSize="15" Click="button_Click" ToolTip="应急终止热键为BS" />
                </Grid>
                <TextBox x:Name="textBox" Margin="10,65,10,10" FontSize="15" Text="信息轰炸测试文字"/>
            </Grid>
        </ScrollViewer>
        <TextBlock Margin="5" HorizontalAlignment="Center" VerticalAlignment="Bottom" Text="Copyright © 2022 AlexSJC"/>
    </Grid>
</Window>
